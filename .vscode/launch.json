// replace all instances of `MouseOverConstruction` with the name of the mod
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "factoriomod",
      "request": "launch",
      "name": "Debug (src)",
      "factorioPath": "${env:factorioSourceRelease}",
      "hookMode": "debug",
      "hookControl": ["MouseOverConstruction", "Sandbox"],
      "factorioArgs": ["--load-scenario", "EditorExtensions/testing"]
    },
    {
      "type": "factoriomod",
      "request": "launch",
      "name": "Debug (src) (data)",
      "factorioPath": "${env:factorioSourceRelease}",
      "hookMode": "debug",
      "hookControl": ["MouseOverConstruction", "Sandbox"],
      "hookData": true,
      "hookSettings": true,
      "factorioArgs": ["--load-scenario", "EditorExtensions/testing"]
    },
    {
      "type": "factoriomod",
      "request": "launch",
      "name": "Profile (src)",
      "factorioPath": "${env:factorioSourceRelease}",
      "hookMode": "profile",
      "hookControl": ["MouseOverConstruction", "Sandbox"]
    }
  ]
}
